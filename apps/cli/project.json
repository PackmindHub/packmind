{
  "name": "packmind-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cli/src",
  "projectType": "application",
  "tags": ["env:node"],
  "targets": {
    "generate-version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node apps/cli/scripts/generate-version.js"
      },
      "description": "Generate version module from package.json"
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "dependsOn": ["generate-version"],
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/cli",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/cli/src/main.ts",
        "tsConfig": "apps/cli/tsconfig.app.json",
        "assets": [
          {
            "input": "apps/cli/src/assets",
            "glob": "**/*",
            "output": "apps/cli/src/assets"
          },
          {
            "input": "packages/linter-ast/res",
            "glob": "*.wasm",
            "output": "."
          }
        ],
        "generatePackageJson": true,
        "esbuildConfig": "apps/cli/esbuild-publish.config.js"
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildConfig": "apps/cli/esbuild-publish.config.js"
        }
      }
    },
    "build-publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "node apps/cli/scripts/clean-package-json.js",
          "node apps/cli/scripts/create-stubs.js",
          "node apps/cli/scripts/add-module-paths.js"
        ],
        "parallel": false
      }
    },
    "bundle": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/cli-bundle",
        "format": ["cjs"],
        "bundle": true,
        "minify": false,
        "main": "apps/cli/src/main.ts",
        "tsConfig": "apps/cli/tsconfig.app.json",
        "generatePackageJson": false,
        "esbuildConfig": "apps/cli/esbuild.config.js"
      },
      "configurations": {
        "development": {},
        "production": {
          "minify": true
        }
      }
    },
    "build-executable": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run apps/cli/bun-build.ts"
      },
      "description": "Build standalone executable for current platform using Bun"
    },
    "build-executable-all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run apps/cli/bun-build.ts --target=all"
      },
      "description": "Build standalone executables for all platforms using Bun"
    },
    "build-executable-linux": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run apps/cli/bun-build.ts --target=linux"
      },
      "description": "Build standalone executables for Linux (x64 + arm64) using Bun"
    },
    "build-executable-macos": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run apps/cli/bun-build.ts --target=macos"
      },
      "description": "Build standalone executables for macOS (x64 + arm64) using Bun"
    },
    "build-executable-windows": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run apps/cli/bun-build.ts --target=windows"
      },
      "description": "Build standalone executables for Windows (x64) using Bun"
    },
    "run": {
      "executor": "@nx/js:node",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "packmind-cli:build",
        "runBuildTargetDependencies": false,
        "watch": false,
        "args": []
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
