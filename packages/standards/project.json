{
  "name": "standards",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/standards/src",
  "projectType": "library",
  "tags": ["env:node"],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project packages/standards/tsconfig.lib.json"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/standards",
        "tsConfig": "packages/standards/tsconfig.lib.json",
        "packageJson": "packages/standards/package.json",
        "main": "packages/standards/src/index.ts",
        "assets": [
          "packages/standards/*.md",
          {
            "input": "packages/standards/samples/generated",
            "glob": "*.json",
            "output": "samples/generated"
          }
        ]
      }
    },
    "generate-samples": {
      "executor": "nx:run-commands",
      "options": {
        "command": "set -a && source apps/api/.env && set +a && npx ts-node --project tsconfig.base.json -r tsconfig-paths/register --transpile-only --compiler-options '{\"module\":\"commonjs\"}' packages/standards/samples/generateSamples.ts"
      }
    }
  }
}
